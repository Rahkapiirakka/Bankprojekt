        <Label x:Name="lbl_BetragÄndern" Content="Platzhalter" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtb_BetragÄndern" PreviewTextInput="NumericTextBoxInput" Height="23" Margin="0,64,20,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Right" Width="85" TextAlignment="Right" />
        <Button x:Name="btn_Bearbeiten" Content="Platzhalter" Margin="100,0,0,20" HorizontalAlignment="Left" Height="30" Width="94" Click="Button_Click_BetragÄndern" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
