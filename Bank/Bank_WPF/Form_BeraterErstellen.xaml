<Window x:Name="Win_BeraterErstellen" x:Class="Bank_WPF.Form_BeraterErstellen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_WPF"
        mc:Ignorable="d"
        Title="Berater erstellen" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txtb_Vorname" Height="23" Margin="20,32,20,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <TextBox x:Name="txtb_Nachname" Height="23" Margin="20,82,20,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="btn_Erstellen" Content="Erstellen" Margin="110,0,110,10" Height="30" VerticalAlignment="Bottom" Click="Button_Click"/>
        <Label x:Name="lbl_Vorname" Content="Vorname" HorizontalAlignment="Left" Margin="16,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Nachname" Content="Nachname" HorizontalAlignment="Left" Margin="16,60,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
