        <Button x:Name="NeuerBerater" Content="Neuer Berater" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="Auto" Click="NeuerBerater_Click"/>
        <Button x:Name="NeuerGKBerater" Content="Neuer Geschäftskundenberater" HorizontalAlignment="Left" Margin="10,107,0,0" VerticalAlignment="Top" Width="Auto" Click="NeuerGKBerater_Click"/>

    </Grid>
</Window>
