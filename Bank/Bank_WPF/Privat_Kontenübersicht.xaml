<Window x:Class="Bank_WPF.Privat_Kontenübersicht"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_WPF"
        mc:Ignorable="d"
        Title="Privat_Kontenübersicht" MinHeight="350" MinWidth="600">
    <Grid Margin="0,0,0,0">
        <ListBox Margin="20,20,170,20"/>
        <Button Content="Konto erstellen" HorizontalAlignment="Right" Margin="0,20,20,0" VerticalAlignment="Top" Height="30" Width="130" Grid.RowSpan="2"/>
        <Button Content="Geld einzahlen" HorizontalAlignment="Right" Margin="0,60,20,0" VerticalAlignment="Top" Height="30" Width="130" Grid.RowSpan="2"/>
        <Button Content="Geld abheben" HorizontalAlignment="Right" Margin="0,100,20,0" VerticalAlignment="Top" Height="30" Width="130" Grid.RowSpan="2"/>
    </Grid>
</Window>
