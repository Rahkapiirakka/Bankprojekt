<Window x:Class="Bank_WPF.Form_KontoErstellen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_WPF"
        mc:Ignorable="d"
        Title="Form_KontoErstellen" Height="160" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lbl_KontoerstellenFrage" Content="Ein neues Konto für den Kunden erstellen?" Height="46" Margin="30,32,30,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_KontoNichtErstellen" Content="Nein" HorizontalAlignment="Left" Margin="50,0,0,20" Width="75" Height="30" VerticalAlignment="Bottom" Click="Button_Click_KontoNichtErstellen"/>
        <Button x:Name="btn_KontoErstellen" Content="Ja" Margin="0,0,50,20" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Button_Click_KontoErstellen"/>
    </Grid>
</Window>
